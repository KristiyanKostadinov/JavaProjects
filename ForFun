package ooptest7;
import java.util.Scanner;
public class OOPTEST7 {
public static void main(String[] args)
{
    Scanner sc = new Scanner (System.in);
    int num1,num2;
    System.out.println("SHOW THE LARGER NUMBER");
    System.out.print("Put in the 1st number: ");
    num1 = sc.nextInt();
    System.out.print("Put in the 2nd number: ");
    num2 = sc.nextInt();
    
    if (num1>num2)
    {
        System.out.println("The number " + num1 + " is larger than " +num2);
    }
    else if (num2>num1)
    {
        System.out.println("The number " + num2 + " is larger than "+num1);
    }
    else
    {
        System.out.println("The number "+ num1+ " is equal to " + num2);
    }
    
}

}
